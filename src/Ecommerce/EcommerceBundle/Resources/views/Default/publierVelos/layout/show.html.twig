{% extends '::layout/layoutAdmin.html.twig' %}


{% block body %}
    <h1>Velos</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ velo.id }}</td>
            </tr>
            <tr>
                <th>Velonom</th>
                <td>{{ velo.velonom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ velo.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ velo.position }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ velo.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if velo.disponible %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('publierVelos_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('publierVelos_edit', { 'id': velo.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Suppimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
